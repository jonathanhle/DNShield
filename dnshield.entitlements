<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Network server capability -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Network client capability -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Allow keychain access -->
    <key>com.apple.security.keychain-access-groups</key>
    <array>
        <string>com.dnshield</string>
    </array>
    
    <!-- Allow loading system extensions (future use) -->
    <key>com.apple.developer.system-extension.install</key>
    <true/>
    
    <!-- Hardened Runtime (improves security without full sandbox) -->
    <key>com.apple.security.runtime.hardened</key>
    <true/>
    
    <!-- Disable library validation for Go runtime -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Disable unsigned executable memory -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <false/>
    
    <!-- App Sandbox disabled due to privileged port requirements -->
    <!-- Security hardening implemented via internal/security/hardening.go -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Allow execution of security commands -->
    <key>com.apple.security.inherit</key>
    <true/>
    
    <!-- Restrict dyld environment variables -->
    <key>com.apple.security.cs.restrict-dyld</key>
    <true/>
</dict>
</plist>