<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Enable App Sandbox for security -->
    <key>com.apple.security.app-sandbox</key>
    <true/>
    
    <!-- Network server capability (DNS, HTTP, HTTPS) -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Network client capability (upstream DNS) -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Allow keychain access -->
    <key>com.apple.security.keychain-access-groups</key>
    <array>
        <string>com.dnshield</string>
    </array>
    
    <!-- File access for configuration and CA storage -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Temporary exception for configuration directory -->
    <key>com.apple.security.temporary-exception.files.home-relative-path.read-write</key>
    <array>
        <string>/.dnshield/</string>
    </array>
    
    <!-- Temporary exception for executing security commands -->
    <key>com.apple.security.temporary-exception.apple-events</key>
    <array>
        <string>com.apple.systempreferences</string>
    </array>
    
    <!-- Required for code signing verification -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <false/>
    
    <!-- Disable library validation to allow Go runtime -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Hardened runtime -->
    <key>com.apple.security.runtime.hardened</key>
    <true/>
</dict>
</plist>